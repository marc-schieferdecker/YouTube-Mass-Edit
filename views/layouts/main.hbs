<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Mass edit your YouTube videos!">
    <meta name="author" content="Marc Schieferdecker">
    <meta name="generator" content="express.js">
    <title>{{title}}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">    <link rel="stylesheet" href="/stylesheets/style.css"/>
    <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css"/>
    <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.1.0/cookieconsent.min.css" />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.1.0/cookieconsent.min.js"></script>
    <script src="/javascripts/app.js"></script>
  </head>
  <body class="text-center">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <header class="masthead mb-auto">
        <div class="mb-3">
          <h3 class="masthead-brand"><i class="fa fa-youtube-play" aria-hidden="true"></i> YT Video Mass Editor</h3>
          <nav class="nav nav-masthead justify-content-center">
            <a id="nav-index" class="nav-link {{#if activeNav.index}}active{{/if}}" href="/">Home</a>
            <a id="nav-auth" class="nav-link {{#if activeNav.auth}}active{{/if}}" href="/auth">Auth</a>
            {{#if cookie.youtubeAuthTokens.access_token}}
                <a id="nav-videos" class="nav-link {{#if activeNav.videos}}active{{/if}}" href="/videos">Videos</a>
            {{/if}}
          </nav>
        </div>
      </header>
      <hr/>

      <main role="main" class="inner cover">
        <h1 class="cover-heading">{{title}}</h1>
        {{{body}}}
      </main>

      <footer class="mastfoot mt-auto">
        <div class="mt-1">
          <p><i class="fa fa-heart-o" aria-hidden="true"></i> Do you like this? <a href="https://paypal.me/LetsShoot">I'm happy to receive your donation</a>! <i class="fa fa-heart-o" aria-hidden="true"></i></p>
          <p>
              <span class="mr-2"><i class="fa fa-github" aria-hidden="true"></i> <a href="https://github.com/marc-schieferdecker/youtube-mass-edit" target="_blank">github</a></span>
              <span class="ml-2 mr-2"><i class="fa fa-user-secret" aria-hidden="true"></i> <a href="/privacy">privacy policy</a></span>
              <span class="ml-2"><i class="fa fa-envelope" aria-hidden="true"></i> <a href="/contact">developer contact</a></span>
          </p>
        </div>
      </footer>
    </div>
    <!-- Modal -->
    <div id="appModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="appModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 id="appModalLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="appModalBody">
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" data-dismiss="modal" aria-hidden="true">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Cookie confirm -->
    <script>
        window.addEventListener("load", function(){
            window.cookieconsent.initialise({
                "palette": {
                    "popup": {
                        "background": "#252e39"
                    },
                    "button": {
                        "background": "#14a7d0"
                    }
                },
                "position": "bottom-right",
                "content": {
                    "message": "This website uses cookies to store your authentication data. Without cookies the application will not run properly."
                }
            })});
    </script>
  </body>
</html>
